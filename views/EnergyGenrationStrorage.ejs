<h2>Find Your EcoVolt Solution</h2>
<form id="ecovolt-form">
  <div class="form-group">
    <label for="name">Your Name:</label>
    <input type="text" id="name" name="name" required />
  </div>
  <div class="form-group">
    <label for="email">Email Address:</label>
    <input type="email" id="email" name="email" required />
  </div>
  <div class="form-group">
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required />
  </div>
  <div class="form-group">
    <label for="solution">Choose Your EcoVolt Solution:</label>
    <select id="solution" name="solution" required>
      <option value="">-- Select an Option --</option>
      <option value="battery_storage">Battery Storage Installation</option>
      <option value="home_battery_backup">Home Battery Backup System</option>
      <option value="wind_turbine">
        Wind Turbine Installation (subject to feasibility)
      </option>
    </select>
  </div>
  <div class="form-group">
    <label for="average-bill">Average Monthly Electricity Bill :</label>
    <input type="number" id="average-bill" name="average_bill" />
  </div>
  <label for="backup-time">Desired Backup Time (Hours):</label>
  <input type="number" id="backup-time" name="backup_time" min="0" required />
  <div class="form-group">
    <h3>Critical Load List </h3>
    <p>Select the appliances and devices you want to power during an outage :</p>
    <div class="critical-loads">
      <input type="checkbox" id="refrigerator" name="critical_loads[]" value="refrigerator" />
      <label for="refrigerator">Refrigerator</label>
      <br />
      <input type="checkbox" id="freezer" name="critical_loads[]" value="freezer" />
      <label for="freezer">Freezer</label>
      <br />
      <input type="checkbox" id="water-pump" name="critical_loads[]" value="water_pump" />
      <label for="water-pump">Water Pump</label>
      <br />
      <input type="checkbox" id="security-system" name="critical_loads[]" value="security_system" />
      <label for="security-system">Security System</label>
      <br />
      <input type="checkbox" id="lighting" name="critical_loads[]" value="essential_lighting" />
      <label for="lighting">Essential Lighting</label>
    </div>
  </div>
</div>
  <button type="submit">Calculate My EcoVolt Solution</button>
</form>
<p id="result"></p>

<script>
    const form = document.getElementById('ecovolt-form');
    const result = document.getElementById('result');
  
    form.addEventListener('submit', (event) => {
      event.preventDefault(); // Prevent default form submission
  
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const location = document.getElementById('location').value;
      const solution = document.getElementById('solution').value;
      const averageBill = document.getElementById('average-bill').value;
      const backupTime = document.getElementById('backup-time').value;
      const criticalLoads = document.querySelectorAll('input[name="critical_loads[]"]:checked');
  
      // Cost estimation disclaimer
      let message = `<h2>Hi ${name}, thanks for your interest in EcoVolt!</h2>`;
      message += `<p>Based on your selections, here's an estimated cost for your chosen EcoVolt solution. Please note that this is an estimate, and actual pricing may vary depending on your location, system size, and installation complexity.</p>`;
  
      // Placeholder cost calculations (replace with your actual logic)
      let estimatedCost = 0;
      if (solution === 'battery_storage') {
        estimatedCost = calculateBatteryStorageCost(averageBill, backupTime); // Replace with your cost calculation function
      } else if (solution === 'home_battery_backup') {
        estimatedCost = calculateHomeBatteryBackupCost(backupTime); // Replace with your cost calculation function
      } else if (solution === 'wind_turbine') {
        estimatedCost = calculateWindTurbineCost(location); // Replace with your cost calculation function considering location
      }
  
      message += `<p><b>Estimated Cost:</b> $${estimatedCost.toFixed(2)}</p>`;
      message += `<p>A qualified EcoVolt representative will contact you via email (at ${email}) to discuss your project in more detail and provide a more accurate quote.</p>`;
  
      result.innerHTML = message;
    });
  </script>